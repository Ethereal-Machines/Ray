	<div id="manual-container"></div>
	<script type="text/template" id="xyz-controls-template">
		<h1 align="center">Template for Manual Control</h1>
		<!-- "#xy-controls" -->
		<div class="small-12 medium-7 columns" id="xy-controls" align="center">
	        <h2 class="bold">Horizontal</h2>
	        <div class="control_bg_xy" align="center">
	          <button class="control_btn_y_plus">Y+</button><br/>
	          <button class="control_btn_x_minus">X-</button> <button class="home_z">HOME</button> <button class="control_btn_x_plus">X+</button><br/>
	          <button class="control_btn_y_minus">Y-</button>
	        </div>
  		</div><!-- end of "#xy-controls" -->
		
		<!-- "#z-controls" -->
  		<div class="small-12 medium-5 columns" id="z-controls">
	        <h2 class="bold" align="center">Vertical</h2>
	        <center>
	          <button class="control_btn_z_plus">Z+</button><br/>
	          <button class="home_z">HOME</button><br/>
	          <button class="control_btn_z_minus">Z-</button>
	        </center>
		</div><!-- end of "z-controls" -->
		
		<!-- "#distance-control" -->
		<div class="small-12 columns" id="distance-control">
				<center>
	        <select class="x-length-changed">
					  <option value="0.1">0.1 mm</option>
					  <option value="5">5 mm</option>
					  <option value="10" selected default>10 mm</option>
					  <option value="100">100 mm</option>
					</select>
					<select class="y-length-changed">
					  <option value="0.1">0.1 mm</option>
					  <option value="1">1 mm</option>
					  <option value="10" selected default>10 mm</option>
					  <option value="100">100 mm</option>
					</select>
					<select class="z-length-changed">
					  <option value="0.1">0.1 mm</option>
					  <option value="1">1 mm</option>
					  <option value="10" selected default>10 mm</option>
					  <option value="100">100 mm</option>
					</select>
				</center>
		</div><!-- end of "#distance-control" -->
	</script>


	<script type="text/template" id="filament-template">
		<div class="small-12 columns" id="extrusion-control">
			<h1>Filament Load/Unload</h1>
			<div class="links-container">
				<a href="#filament-load-wizard">Load Filament</a>
				<a href="#filament-unload-wizard">Unload Filament</a>
			</div>
		</div>
	</script>


	<script type="text/template" id="auto-bed-level-template"></script>



	<script type="text/template" id="pre-heat-template">
		{%- macro temp_control(class, label) %}
		    <div class="temp-control-cont {{class}}">
		      <!-- here we show the rising temperature -->
		      <span class="current-temp-top bold">- -</span>
		      <div class="temp-bar">
		        <!-- here the 'bed' or 'nozzle' label will display based on the bar we are on -->
		        <label class="bold">{{label}}</label>

		        <!-- this is the movable bar, which moves slowly slowly on the 
		          temp rise -->
		        <div class="current-temp">
		          <div class="triangle_left"></div>
		          <div class="triangle_right"></div>
		        </div>

		        <div class="temp-target radius bold">
		          <a class="temp-edit"><i class="icon-pencil"></i></a>
		          <span class="target-value">- -</span>
		          <input type="number" class="hide"/>
		        </div>
		      </div>
		      <button class="temp-off secondary small radius expand">OFF</button>
		    </div>
		{%- endmacro %}
		<a href="#preheating">Switch to PREHEATING</a>
		<div class="medium-12 large-5 columns" id="temp-control">
			<div class="row">
			  <div class="small-4 columns" align="center">
			    {{ temp_control('nozzle', 'Nozzle')}}
			  </div>
			  <div class="small-4 columns" align="center">
			    {{ temp_control('bed', 'Bed')}}
			  </div>
			</div><!-- end of '.row' -->
		</div><!-- end of "#temp-control" -->
	</script>
</div>