      <div class="small-12 columns" id="extrusion-control">
        <h2 class="bold"><i class="icon-extruder"></i> Filament Extruder</h2>
        <div class="small-12 medium-7 columns">
          <div class="row extruder-switch closer"></div>
        </div>
        <div class="small-12 medium-5 columns">
          <div class="row closer">
            <div class="small-6 columns">
              <button class="small radius expand success extrude">Extrude</button>
            </div>
            <div class="small-6 columns">
              <button class="small radius expand success retract">Retract</button>
            </div>
          </div>
        </div>
        <script type="text/template" id="extruder-switch-template">

          <!-- If the extruder count > 1 then the below HTML will be visible
            with no. of nozzles option. If no of extruder will be only 1, this option
            will not be visible
          -->
          <% if (profile.extruder_count > 1) { %>
            <div class="small-3 columns">
              <label class="bold">Nozzle</label>
              <select class="extruder-number">
                <% for(var i=0; i<profile.extruder_count; i++) { %>
                  <option value="<%= i %>"><%= i+1 %></option>
                <% } %>
              </select>
            </div>
          <% } %>
          
          <!-- The below divs with heading "Amount" and "Speed" will always show -->
          <div class="<% if (profile.extruder_count > 1) { %> small-4 <% } else { %> small-6 <% } %>columns select-with-text">
            <label class="bold">Amount</label>
            <select class="extrusion-length">
              <option value="10" selected default>10 mm</option>
              <option value="50">50 mm</option>
              <option value="100">100 mm</option>
              <option value="200">200 mm</option>
              <option value="other">Other...</option>
            </select>

            <!-- Bleow block is kept .hide by default -->
            <div class="row collapse other-length hide">
              <div class="small-8 columns">
                <input type="number" value="10" class="expand back-to-select" name="extrusion-length"/>
              </div>
              <div class="small-4 columns">
                <span class="postfix radius">mm</span>
              </div>
            </div>
          </div>

          <div class="<% if (profile.extruder_count > 1) { %> small-5 <% } else { %> small-6 <% } %>columns select-with-text">
            <label class="bold">Speed</label>
            <select class="extrusion-speed">
              <option value="50">Fast (50 mm/s)</option>
              <option value="2" selected default>Normal (2 mm/s)</option>
              <option value="0.5">Slow (0.5 mm/s)</option>
              <option value="other">Other...</option>
            </select>

            <!-- Below block is kept .hide by default -->
            <div class="row collapse other-speed hide">
              <div class="small-7 columns">
                <input type="number" value="2" class="expand back-to-select" name="extrusion-speed"/>
              </div>
              <div class="small-5 columns">
                <span class="postfix radius">mm/s</span>
              </div>
            </div>
          </div>
        </script>
      </div>
    </div>
  </div>
