{% extends 'navigation-base.jinja2' %}

{% block homenav %}
	<ul id="home-page-links">
		<li class="home-page-links__link-item">
			<a href="#print-from-storage" class="print-from-storage-link">
				<div class="print-from-storage-link__img-heading-container">
					<img src="{{ url_for('static', filename='img/home-page/print-storage-icon.svg') }}" alt="" width="96" height="96">
					<h2>Print From Storage</h2>
				</div>
			</a>
		</li>
		<li class="home-page-links__link-item">
			<ul class="home-page-links__link-item__sub-links">
				<li class="home-page-links__link-item__sub-links__sub-link-item">
					<a href="#settings" class="settings-link">
						<div class="settings-link__img-heading-container">
							<img src="{{ url_for('static', filename='img/home-page/settings-icon.svg') }}" alt="" width="96" height="96">
							<h2>Settings</h2>
						</div>
					</a>
				</li>
				<li class="home-page-links__link-item__sub-links__sub-link-item">
					<a href="#utilities" class="utilities-link">
						<div class="utilities-link__img-heading-container">
							<img src="{{ url_for('static', filename='img/home-page/utilities-icon.svg') }}" alt="" width="96" height="96">
							<h2>Utilities</h2>
						</div>
					</a>
				</li>
			</ul>
		</li>
	</ul>

	<footer id="home-footer">
		<div id="footer-container">
			<img src="{{ url_for('static', filename='img/home-page/ready-icon.svg') }}" alt="" width="56" height="56" class="footer-container__status-icon">
			<span class="footer-container__status-msg">Ready to Print</span>
		</div>
	</footer>

{% endblock %}
