{% block homenav %}{% endblock %}

<div class="power-off-modal hide">
	<ul class="power-off-modal__button-container">
		<li class="power-off-modal__button">
			<button class="power-off-button" type="button">
				<img src="{{ url_for('static', filename='img/home-page/power-off-icon.svg') }}" alt="" width="72" height="72">
				<h2>Power Off</h2>
			</button>
		</li>
		<li class="power-off-modal__button">
			<button class="restart-button" type="button">
				<img src="{{ url_for('static', filename='img/home-page/restart-icon.svg') }}" alt="" width="72" height="72">
				<h2>Restart</h2>
			</button>
		</li>
	</ul>
</div>
