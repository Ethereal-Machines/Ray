<div id="preheat-wizard">
	<nav id="preheat-wizard-nav">
		<div class="wizard-name wizard-name--preheating">
			Preheating...
		</div>
		<button class="preheat-wizard__cancel-button cancel-button">
			Cancel
		</button>
	</nav>

	<div id="preheat-wizard__preheating-progress" class="active">
		<!-- <h1 class="preheat-wizard__heading">Heating...</h1> -->
		<!-- nozzle-part -->
		{%- macro progress_section(tool, imgName, class, progressBarName) %}
			<div class="preheat-wizard__{{class}}-container">
				<div class="preheat-wizard__{{class}}-container__img-temp-container">
					<div class="{{class}}-img">
						<img src="../../img/preheating-utility/{{imgName}}" alt="{{tool}}" width="64" height="64">
					</div>
					<div class="{{class}}-temp-progress">
						<p class="temp-msg">{{tool}} Temperature</p>
						<p class="temp-value"> -- &deg;C/ -- &deg;C</p>
					</div>
				</div>
				<div class="preheat-wizard__{{class}}-container__progress-container">
					<progress max="100" value="0" id="{{progressBarName}}-progress-bar"></progress>
				</div>
			</div>
		{%- endmacro %}

		{{ progress_section('Extruder 1', 'extruder-1.svg', 'nozzle', 'extruder') }}
		{{ progress_section('Extruder 2', 'extruder-2.svg', 'extra', 'extra') }}
		{{ progress_section('Bed', 'bed-plate.svg', 'bed', 'bed') }}


