		<!-- <button type="button" class="preheat-wizard__cancel-button next-button">Cancel</button> -->

	</div>

	<div id="preheat-wizard__finish-section" class="hide">
		<div class="finish-icon-container">
			<img src="{{ url_for('static',filename='img/ethereal-astroprint/finish-icon.svg') }}" alt="Finish icon" width="176" height="176">
		</div>
		<h2 class="finish-msg">Heating Complete</h2>
		<a href="#control">
			<button type="button" class="finish-section-button next-button" id="preheat-wizard__finish-section__finish-button">FINISH</button>
		</a>
	</div>

	<div class="preheat-wizard__confirm-cancel-modal hide">
		<div class="preheat-wizard__confirm-cancel-modal__inner">

			<h1 class="preheat-wizard__confirm-cancel-modal__modal-heading">Confirm Cancel</h1>
			<hr>
			<img src="{{ url_for('static', filename='img/preheating-utility/confirm-cancel-icon.svg') }} " width="96" height="96">
			<p class="preheat-wizard__confirm-cancel-modal__msg">
				Are you sure you want to cancel preheating?
			</p>
			<div class="preheat-wizard__confirm-cancel-modal__button-container">
				<button class="no-button">NO</button>
				<a href="#control"><button class="yes-button">YES</button></a>
			</div>

		</div>
	</div>

