<nav id="printing-wizard-nav">
  <div class="wizard-name wizard-name--printing">
    Printing - <span class="printing-file-name"></span>
  </div>
</nav>

<div id="printing-info-container">
  <div class="print-progress-container">
    <div class="progress success">
      <h2 class="printing-progress">Printing Progress</h2>
      <span class="progress-label"></span>
    </div>
  </div>

  <div class="print-info print-info--printing-wizard">
    
    <div class="temperatures">
      
      <!-- macro for the Nozzle and Bed  -->
      {%- macro temp_control(class, label) %}
        <div class="temp-bar {{class}}">
          <div class="temp-target">
            <span class="current-value temp-current">- - &deg;C /</span>
            <span class="target-value">- - &deg;C</span>
          </div>
        </div>
      {%- endmacro %}

      <div class="printing-wizard__nozzle-container">
        <img src="{{ url_for('static',filename='img/preheating-utility/extruder-1.svg') }}" alt="Nozzle" class="printing-wizard__target-img" width="48" height="48">
        <progress max="100" value="0" class="printing-wizard__progress printing-wizard__progress--extra">
        </progress>
        {{ temp_control('extra', 'Nozzle 1')}}
      </div>

      <div class="printing-wizard__nozzle-container">
        <img src="{{ url_for('static',filename='img/preheating-utility/extruder-2.svg') }}" alt="Nozzle" class="printing-wizard__target-img" width="48" height="48">
        <progress max="100" value="0" class="printing-wizard__progress printing-wizard__progress--nozzle">
        </progress>
        {{ temp_control('nozzle', 'Nozzle 2')}}
      </div>

      <div class="printing-wizard__bed-container">
        <img src="{{ url_for('static',filename='img/preheating-utility/bed-plate.svg') }}" alt="Nozzle" class="printing-wizard__target-img" width="48" height="48">
        <progress max="100" value="0" class="printing-wizard__progress printing-wizard__progress--bed">
        </progress>
        {{ temp_control('bed', 'Bed')}}
      </div>

    </div>

    <div class="info info--printing-wizard">
      <div class="printing-wizard__time-left">
        <h2 class="printing-wizard__time-left__heading">Time Remaining</h2>
        <div class="printing-wizard__time-left__value">
          <span class="highlighted estimated-hours">--</span>:<span class="highlighted estimated-minutes">--</span>:<span class="highlighted estimated-seconds">--</span>
        </div>
      </div>
      <div class="printing-wizard__layer-left">
        <h2 class="printing-wizard__layer-left__heading">Printing Layer</h2>
        <div class="printing-wizard__layer-left__value">
          <span class="current-layer highlighted"></span><span class="highlighted layer-count"></span>
        </div>
      </div>
    </div>

  </div>
</div>



<div class="button-container">
  <div class="loading-button printing-wizard-btn--left">
    <button class="success pause-print next-button">Print</button>
  </div>
  <!-- <button class="radius controls expand" style="display:none">Printer Controls</button> -->
  <div class="printing-wizard-btn--right">
    <button class="alert stop-print next-button">Cancel</button>
  </div>
</div>

